<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://browseCaption">
    <data readOnly="true">
        <collection id="usersDc"
                    class="io.jmix.samples.ui.entity.SampleUser">
            <fetchPlan>
                <property name="id"/>
                <property name="username"/>
                <property name="firstName"/>
                <property name="lastName"/>
            </fetchPlan>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from sample_User e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout spacing="true" expand="usersTable" width="100%">
        <groupTable id="usersTable"
                    width="100%"
                    dataContainer="usersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="username"/>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
            <pagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="usersTable.create"/>
                <button id="editBtn" action="usersTable.edit"/>
                <button id="removeBtn" action="usersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <vbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </vbox>
    </layout>
</window>
