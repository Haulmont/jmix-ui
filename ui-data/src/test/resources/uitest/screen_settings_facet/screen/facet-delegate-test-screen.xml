<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        xmlns:uidata="http://jmix.io/schema/ui/ui-data.xsd">
    <data readOnly="true">
        <collection id="projectsDc"
                    class="test_support.entity.Project">
            <fetchPlan extends="_local"/>
            <loader id="projectsLd">
                <query>
                    <![CDATA[select e from test_uidata_Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>

        <uidata:screenSettings id="facet"
                               auto="true"/>
    </facets>
    <layout spacing="true">
        <groupTable id="projectsTable"
                    width="100%"
                    dataContainer="projectsDc">
            <columns>
                <column id="name"/>
                <column id="description"/>
                <column id="budget"/>
                <column id="startDate"/>
                <column id="active"/>
            </columns>
        </groupTable>
    </layout>
</window>
