<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://systemInfoWindow.caption"
        focusComponent="infoTable">
    <data>
        <collection id="paramsDc"
                    class="io.jmix.ui.app.systeminfo.model.InfoParam"/>
    </data>

    <dialogMode forceDialog="true" width="600" height="AUTO" resizable="true"/>

    <layout spacing="true">
        <table id="infoTable"
               dataContainer="paramsDc"
               columnControlVisible="false"
               reorderingAllowed="false"
               sortable="false"
               textSelectionEnabled="true"
               width="100%"
               height="250px">
            <columns>
                <column id="key" caption="msg://systemInfo.name"/>
                <column id="value" caption="msg://systemInfo.value"/>
            </columns>
        </table>
        <hbox id="buttonsPanel" spacing="true">
            <button id="insertBtn" caption="msg://insertBtn.caption" disableOnClick="true"/>
            <button id="updateBtn" caption="msg://updateBtn.caption" disableOnClick="true"/>
            <button id="selectBtn" caption="msg://selectBtn.caption" disableOnClick="true"/>
        </hbox>
        <textArea id="scriptArea"
                  editable="false"
                  visible="false"
                  width="100%"/>
    </layout>
</window>